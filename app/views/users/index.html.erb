<h3>Users</h3>

<% if current_user and current_user.admin? %>

 <table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

 <% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'edit user', edit_user_path(user) %></td>
    <td><% if current_user.admin? and (not user.admin?) %>
          <%=
           button_to "delete user", { :action => "destroy", :id => user.id },
            :confirm => "Are you sure?", :method => :delete
           %>
        <% end %>
    </td>
  </tr>
 <% end %>
 </table>

 <br />

 <%= link_to 'New user', new_user_path %>
 <br/>

<% end %>

