<%= javascript_include_tag :defaults %>    
                                                    
    <script src="/assets/inplacericheditor/lib/tiny_mce/tiny_mce.js" type="text/javascript">
    </script>
    <script type="text/javascript">
          tinyMCE.init( {
              mode : "textareas",
              theme : "advanced",
              relative_url : false,
              theme_advanced_buttons1: "bold, italic, removeformat, separator, charmap, separator, justifyleft, justifycenter, justifyright, justifyfull, formatselect",
              theme_advanced_buttons2: "undo, redo, separator, link, unlink, separator, bullist, separator, outdent, indent, separator, hr, separator, cleanup, code",
              theme_advanced_buttons3: "",
              onchange_callback : function() { tinyMCE.triggerSave(); changed = true; }
                        } );                                                                                      
    </script>

<%= form_for(@post) do |f| %>
<fieldset>
  <p>
    <b><%= @post.post.nil?? '' : @post.post.title %></b><br/>
    <b>title</b><br />
    <%= f.text_field :title, :value => @post.title %>
  </p>

  <p>
    <b>message</b> 
    <br/>
    <%= f.text_area :message, :value =>@post.message %>

  </p>
  
    <%= f.hidden_field :list_id %>
    <%= f.hidden_field :user_id %>
  
  <p>
    <%= f.submit SAVE_BUTTON %>
  </p>
</fieldset>
<% end %>

<% if @post.post_id.nil? %>
  <a href="<%= "/posts/new?l=#{ @post.list_id }&p=#{ @post.id }" %>"><%= COMMENT %></a>
<% end %>



