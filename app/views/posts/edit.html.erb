<%= form_for(@post) do |f| %>
<fieldset>
  <p>
    <b><%= @post.post.nil?? '' : @post.post.title %></b><br/>
    <b>title:</b><br />
    <%= f.text_field :title, :value => @post.title %>
  </p>

  <p>
    <%= raw @post.picture %>
  </p>

  <p>
    <b>message:</b> 
    <br/>
    <%= f.text_area :message, {:size => "#{ MSG_WIDTH }x#{ MSG_HEIGHT }", :value => @post.message} %>

  </p>
  
    <%= f.hidden_field :list_id %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :post_id %>
  
  <p>
    <%= f.submit SAVE_BUTTON %>
  </p>
</fieldset>
<% end %>

<br/><br/>

<% if @post.post_id.nil? %>

  <a href="<%= "/posts/new?l=#{ @post.list_id }&p=#{ @post.id }" %>"><%= COMMENT %></a>
  <br/><br/>
       <% if can_change?( @post ) %>
          <% if @post.picture == '' %>
            <%= link_to 'add picture', {:controller =>'upload', :params=>{:p=>@post} } %>
          <% else %>
            <%= link_to 'change picture', {:controller =>'upload', :params=>{:p=>@post} } %>
          <% end %> 
       <% end %>  
  <br/><br/>

  <b>&nbsp;&nbsp;comments</b><br/>
  <div id="comments">
    <% @post.posts.reverse.each do |post| %>
      <b><%= post.title %></b><br/>
      <%= post.long %><br/><br/>
    <% end %>
  </div>

<% end %>

