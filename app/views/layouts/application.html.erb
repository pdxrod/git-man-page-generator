<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "pdxspurs", :media => "all" %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %>
</head>
<body>
  <%= raw( flash_format( flash[ :notice ] ) ) %>
  <div id='nav'>
    <% if current_user -%>

          <%= current_user.name_display %> |
          <%= link_to "Log out", :logout, :method => :delete %> | <a href="/">Home</a> | <a href="/posts">Messages</a> |
          <%= link_to( "News", '/news' ) %> | 
          <%= link_to "Change password", edit_user_path(current_user.id)%>

    <% else -%>
    
          <%= link_to "Log in", :login %> | <a href="/">Home</a> | <a href="/posts">Messages</a> |
          <%= link_to( "News", '/news' ) %> | <%= link_to "Join this site", new_user_path %> |
          <%= link_to "Forgot password?", '/password_resets/new' %>

    <% end -%>
  </div>

 <br/>

  <%= yield %>

 <br/><br/> 

</body>
</html>

